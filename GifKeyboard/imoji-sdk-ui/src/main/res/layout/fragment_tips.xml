<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#A0303030"
                tools:context="io.imoji.sdk.editor.fragment.TipsFragment">

    <android.support.v4.view.ViewPager
        tools:layout="@layout/fragment_hint_page"
        android:id="@+id/imoji_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/imoji_hint_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <io.imoji.sdk.editor.ui.DotDotView
            android:layout_marginTop="@dimen/imoji_tips_element_margin"
            android:id="@+id/imoji_dot_dot_view"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/imoji_tips_element_margin"
            android:layout_height="wrap_content"
            app:num_dots="3"/>

        <ImageButton
            android:id="@+id/imoji_ib_tips_proceed"
            android:layout_width="56dp"
            android:layout_marginBottom="@dimen/imoji_tips_element_margin"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="?selectableItemBackground"
            android:src="@drawable/create_tips_proceed"/>
    </LinearLayout>

</RelativeLayout>
